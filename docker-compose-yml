version: '3.8'


services:    
    nginx:    
        container_name: nginx
        image: nginx
        restart: always
        ports:
          - "8080:8080"                
        volumes:          
          - ./nginx/config:/etc/nginx/conf.d/  
          - ./nginx/logs:/var/log/nginx/ 


    api_1:
        container_name: api_1
        image: api
        build: ./servidor
        restart: always        
        environment:
          TZ: America/Sao_Paulo        
        ports:
            - "80" 

    api_2:
        container_name: api_2
        image: api
        build: ./servidor
        restart: always        
        environment:
          TZ: America/Sao_Paulo        
        ports:
            - "80"  
